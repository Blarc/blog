---
import BaseLayout from "../layouts/BaseLayout.astro";
import Project from "../components/Project.astro";

const {frontmatter} = Astro.props;

type Project = {
    name: string;
    link: string;
    description: string;
    language: string;
    languageColor: string;
};
---
<BaseLayout>
    <body class="flex flex-col items-center">
    <main class="max-w-prose h-full w-full flex justify-center p-l-4 p-r-4">
        <div>
            <div class="p-4">
                <h1 class="text-xl">Projects</h1>
                <p class="opacity-50 italic">{frontmatter.description}</p>
            </div>
            <section class="grid xs:grid-cols-1 sm:grid-cols-2 gap-3">
                {
                    frontmatter.projects
                        .slice(0, 4)
                        .map((project: Project) => {
                            return (
                                    <Project
                                            name={project.name}
                                            link={project.link}
                                            description={project.description}
                                            language={project.language}
                                    />
                            );
                        })
                }
            </section>
        </div>
    </main>
    </body>

</BaseLayout>
