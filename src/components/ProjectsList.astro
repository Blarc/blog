---
import Project from "../components/Project.astro";
import { projects, ProjectType } from '../data/projects';

---

<div>
    <div class="p-4">
        <h1 class="text-xl">Projects</h1>
        <!--<p class="opacity-50 italic">List of projects that I am proud of:</p>-->
    </div>
    <section class="grid xs:grid-cols-1 sm:grid-cols-2 gap-3">
        {
           projects
                .slice(0, 4)
                .map((project: ProjectType) => {
                    return (
                            <Project
                                    name={project.name}
                                    link={project.link}
                                    description={project.description}
                                    language={project.language}
                            />
                    );
                })
        }
    </section>
    <a class="p-x4 p-y10" href="https://github.com/Blarc">All projects</a>
</div>
