---
export interface Props {
  name: string;
  link: string;
  description: string;
  language: string;
}

const { name, link, description, language } = Astro.props;

---
<a
  href={link}
  target="_blank"
  class="hover:no-underline"
>
    <div class=" hover:scale-105 ease-out transition-transform p-4">
        <div class="h-24 flex flex-col gap-y-2">
            <div>
                <div class="text-normal">{name}</div>
                <div class="text-sm opacity-50">{description}</div>
            </div>

        </div>
        <div class="text-sm opacity-30">{language}</div>
    </div>


</a>
